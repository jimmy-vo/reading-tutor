{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/app/index.ts",
      "outFiles": ["${workspaceFolder}/app/**/*.js"],
      "preLaunchTask": "npm: build",
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/app/**/*.js",
        "${workspaceFolder}/app/**/*.ts"
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Process",
      "processId": "${command:PickProcess}",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
